{
  "name": "layout-manager",
  "version": "0.0.1",
  "description": "Generic library to manage the layout.",
  "maintainers": [
    {
      "name": "Bastien Levasseur",
      "email": "bastien.levasseur@atome.io"
    }
  ],
  "dependencies": {
    "jquery": "^2.2.4",
    "jquery-touch-events": "git+https://github.com/atome-fr/jQuery-Touch-Events.git"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "jasmine-reporters": "^2.2.1",
    "jest": "^19.0.2",
    "jsdoc": "^3.5.5",
    "minimist": "^1.2.0",
    "semver": "^5.3.0",
    "version": "^0.1.2",
    "webpack": "^2.2.1"
  },
  "scripts": {
    "watch": "webpack --progress --colors --watch",
    "test": "jest",
    "watch-test": "jest --watch",
    "build": "webpack",
    "docs": "jsdoc -c jsdoc.json -r",
    "preversion": "npm test",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "author": {
    "name": "Bastien Levasseur",
    "email": "bastien.levasseur@atome.io"
  },
  "main": "dist/layout-manager.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/atome-fr/layout-manager.git"
  },
  "keywords": [
    "manager",
    "layout"
  ],
  "jest": {
    "roots": [
      "__tests__"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageDirectory": "out/coverage/",
    "coverageReporters": [
      "lcov",
      "cobertura",
      "text"
    ],
    "setupFiles": [
      "<rootDir>/jest-env.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/setup-jasmine-env.js"
  }
}
